<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liezh.dao.HeatDao">

    <select id="queryHeat" resultType="com.liezh.domain.entity.Heat">
        SELECT id, name, energy, unit
        FROM heat
        <where>
            <if test="name != null">
                AND name LIKE CONCAT('%',#{name},'%')
            </if>
        </where>
    </select>


</mapper>